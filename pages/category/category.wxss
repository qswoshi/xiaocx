.container {
  display: flex;
}

.category-list {
  width: 25%;
  background-color: #f5f5f5;
  border-right: 1px solid #e5e5e5;
}

.category-item {
  padding: 10px;
  font-size: 14px;
}

.category-item.active {
  background-color: #fff;
  font-weight: bold;
}

.sub-category-list {
  width: 75%;
  display: flex;
  flex-wrap: wrap;
  padding: 10px;
}

.sub-category-item {
  width: 33.33%;
  padding: 10px;
  text-align: center;
}

.sub-category-image {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  background-color: #f5f5f5;
  object-fit: cover;
}

.sub-category-name {
  margin-top: 8px;
  font-size: 14px;
}
